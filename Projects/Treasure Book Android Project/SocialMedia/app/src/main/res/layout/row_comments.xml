<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="1dp"
    app:contentPadding="2dp"
    app:cardBackgroundColor="@color/colorWhite">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cProfileIv_comment"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_default_img"/>
        <TextView
            android:id="@+id/nameTv_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/cProfileIv_comment"
            android:text="Name"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/commentTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameTv_comment"
            android:layout_toEndOf="@+id/cProfileIv_comment"
            android:text="Comment..."
            android:textColor="@color/colorBlack"
            android:layout_toRightOf="@+id/cProfileIv_comment" />
        <TextView
            android:id="@+id/timeTv_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12/06/2019"
            android:layout_below="@id/commentTv"
            android:layout_toEndOf="@+id/cProfileIv_comment"
            android:layout_toRightOf="@+id/cProfileIv_comment" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>