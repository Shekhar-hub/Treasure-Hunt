<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/colorWhite"
    app:contentPadding="3dp"
    android:layout_marginTop="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/groupIconIv_list"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:civ_circle_background_color="@color/colorWhite"
            android:src="@drawable/ic_group_primary"/>
        <TextView
            android:id="@+id/groupTitleTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="Group Title"
            android:layout_toEndOf="@+id/groupIconIv_list"
            android:textSize="18sp"
            android:textColor="@color/colorBlack"/>
        <TextView
            android:id="@+id/nameTv_groupList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/groupIconIv_list"
            android:layout_below="@+id/groupTitleTv"
            android:layout_marginStart="4dp"
            android:text="Sender Name"
            android:textColor="@color/colorBlack"/>
        <TextView
            android:id="@+id/messageTv_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/groupTitleTv"
            android:layout_toEndOf="@+id/nameTv_groupList"
            android:text="The Message"
            android:layout_marginStart="5dp"
            android:singleLine="true"/>
        <TextView
            android:id="@+id/timeTv_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameTv_groupList"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:text="01/01/2001"
            android:singleLine="true"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>