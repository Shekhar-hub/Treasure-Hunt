<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ImageView
    android:id="@+id/logo"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
    android:src="@drawable/music"
        android:layout_marginStart="50dp" />

    <RelativeLayout
        android:id="@+id/upper"
        android:layout_below="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="100dp">
<TextView
    android:id="@+id/songsName"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:textSize="25dp"
    android:textStyle="italic|bold"
    android:textAlignment="center"
    android:textAllCaps="false"
    android:textColor="@color/colorPrimaryDark"
    android:layout_marginTop="7dp"
    android:singleLine="true"
    android:marqueeRepeatLimit="marquee_forever"
    android:ellipsize="marquee"
    android:gravity="center_horizontal" />
    </RelativeLayout>
<RelativeLayout
    android:id="@+id/lower"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    android:gravity="center"
    android:layout_below="@+id/upper">
    <SeekBar
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/prev_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progress_bar"
        android:src="@drawable/previous"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="70dp"
        />
    <ImageView
        android:id="@+id/play_pause_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/prev_btn"
        android:layout_toRightOf="@+id/prev_btn"
        android:src="@drawable/pause"
        android:layout_below="@+id/progress_bar"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
         />
    <ImageView
        android:id="@+id/next_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/play_pause_btn"
        android:layout_toRightOf="@+id/play_pause_btn"
        android:src="@drawable/next"
        android:layout_below="@+id/progress_bar"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
         />

</RelativeLayout>
    <ImageButton
        android:id="@+id/voice_enabled_btn"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:background="@drawable/ic_mic_on"/>
</RelativeLayout>